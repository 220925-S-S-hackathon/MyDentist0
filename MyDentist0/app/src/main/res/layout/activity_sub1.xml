<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubActivity1"

    android:background="@color/sky"
    android:orientation="vertical"
    >


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/sub1"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/button01"
        android:layout_width="37dp"
        android:layout_height="46dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="260dp"
        android:background="#00ff0000"
        android:text=" "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:srcCompat="@drawable/sub2"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button02"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_marginStart="72dp"
        android:background="#00ff0000"
        android:text=" "
        app:layout_constraintBottom_toTopOf="@+id/button01"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <Button
        android:id="@+id/button03"
        android:layout_width="35dp"
        android:layout_height="36dp"
        android:layout_marginStart="82dp"
        android:background="#00ff0000"
        android:text=" "
        app:layout_constraintBottom_toTopOf="@+id/button02"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/button04"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_marginStart="96dp"
        android:text=" "
        android:background="#00ff0000"
        app:layout_constraintBottom_toTopOf="@+id/button03"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button05"
        android:layout_width="26dp"
        android:layout_height="36dp"
        android:layout_marginStart="116dp"
        android:text=" "
        android:background="#00ff0000"
        app:layout_constraintBottom_toTopOf="@+id/button04"
        app:layout_constraintStart_toStartOf="parent" />



</LinearLayout>